<LinearLayout android:id="@+id/layoutEmpty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Cute placeholder image or icon -->
    <ImageView
        android:id="@+id/ivEmpty"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/cat_placeholder"
        android:contentDescription="No pets"
        android:layout_marginBottom="16dp"/>

    <!-- Main placeholder text -->

    <!-- Subtitle text -->
    <TextView
        android:id="@+id/tvEmptyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="No pets yet"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:fontFamily="@font/inter_bold" />

    <TextView
        android:id="@+id/tvEmptySubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add your first pet to get started!"
        android:textColor="#949494"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/inter_regular"/>

    <!-- Optional action button -->
</LinearLayout>
