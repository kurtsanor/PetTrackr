<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Header row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/growthIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/rise"
            style="@style/CircleShape"
            android:layout_marginEnd="15dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/growthTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Growth Record"
                android:textSize="18sp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/growthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13 Jan 2025"
                android:textSize="14sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#1A73E8" />
        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_marginVertical="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <!-- Measurements -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Measurements"
        android:textSize="14sp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"/>

    <!-- Weight -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:textColor="#888888"
        android:textSize="12sp"
        android:fontFamily="@font/inter_regular" />

    <TextView
        android:id="@+id/growthWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.2 kg"
        android:textSize="16sp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"/>

    <!-- Height -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height"
        android:textColor="#888888"
        android:textSize="12sp"
        android:fontFamily="@font/inter_regular" />

    <TextView
        android:id="@+id/growthHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="32 cm"
        android:textSize="16sp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/black" />

    <!-- Notes â†“ at bottom always -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes"
        android:layout_marginTop="20dp"
        android:textColor="#888888"
        android:textSize="12sp"
        android:fontFamily="@font/inter_regular" />

    <TextView
        android:id="@+id/growthNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notes go here..."
        android:textSize="14sp"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"/>

</LinearLayout>
