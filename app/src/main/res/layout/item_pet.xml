<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="120dp"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="15dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="3dp"
    app:cardPreventCornerOverlap="true"
    android:layout_marginHorizontal="3dp"
    app:contentPadding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--Pet Picture-->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="70dp"
            app:cardPreventCornerOverlap="true"
            android:layout_marginEnd="15dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/doggy"
                android:scaleType="centerCrop"
                />

        </androidx.cardview.widget.CardView>

        <!--Right Section Outer Layout-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--Right Section Inner Layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--Pet Name-->
                    <TextView
                        android:id="@+id/petName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buddy"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_bold"
                        android:textColor="@color/black"/>
                    <!--Pet Breed-->
                    <TextView
                        android:id="@+id/petBreed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:text="Golden Retriever"
                        android:textColor="#3E3E3E"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="16sp" />
                </LinearLayout>
                <Button
                    style="@style/ShapeAppearanceOverlay.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:backgroundTint="#EAF6EC"
                    android:text="Healthy âœ“"
                    android:textSize="14dp"
                    android:textColor="#176832"
                    android:fontFamily="@font/inter_semibold"
                    />
            </LinearLayout>
            <!--Line Break-->
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerColor="#EEEEEE"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <!--Statistics-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/genderImage"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/checkup"
                        app:tint="#289045"
                        android:layout_marginRight="10dp"/>
                    <!--Pet Health Percentage-->
                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Dog"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/black"
                        android:layout_marginRight="20dp"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/pawprint"
                        app:tint="#FFAB40"
                        android:layout_marginEnd="10dp"/>
                    <!--Pet Activity Count-->
                    <TextView
                        android:id="@+id/petType"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/black"
                        />

                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:src="@drawable/rightarrow"
                    app:tint="#1F1E1E"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>