<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Header row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/CircleShape"
            android:id="@+id/bottomSheetIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/secure"
            android:layout_marginEnd="15dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bottomSheetVaccineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anti-Rabies"
                android:textSize="18sp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/bottomSheetNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buddy"
                android:textSize="14sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#929292" />

        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_marginVertical="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <!-- Date -->
    <TextView
        android:text="Date Administered"
        android:textSize="14sp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bottomSheetDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12 Jan 2025"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/inter_regular"
        android:textColor="#1A73E8" />

    <!-- Additional details -->
    <TextView
        android:id="@+id/bottomSheetAdditional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Additional information about the vaccine"
        android:textSize="14sp"
        android:fontFamily="@font/inter_regular"
        android:textColor="#666666" />

</LinearLayout>
