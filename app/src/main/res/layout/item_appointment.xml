<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="1dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/appointmentIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15dp"
            android:src="@drawable/clock"
            app:tint="@color/accent"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appointmentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Annual Checkup"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/appointmentDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jan 15, 2026 â€¢ 10:30 AM"
                android:textSize="14sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#666"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/appointmentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:textSize="12sp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/accent"
                android:layout_marginTop="6dp"
                android:background="#E8F5F1"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>