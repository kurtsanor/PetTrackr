<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    android:background="@android:color/white"
    android:paddingHorizontal="10dp"
    android:orientation="horizontal"
    >

    <ImageView
        style="@style/CircleShape"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="15dp"
        android:src="@drawable/clock" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Appointment Title / Reason -->
        <TextView
            android:id="@+id/appointmentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Annual Checkup"
            android:textSize="16sp"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black" />

        <!-- Appointment Date and Time -->
        <TextView
            android:id="@+id/appointmentDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jan 15, 2026 â€¢ 10:30 AM"
            android:textSize="14sp"
            android:fontFamily="@font/inter_regular"
            android:textColor="#555"
            android:layout_marginTop="4dp"/>

        <!-- Appointment Status (optional) -->
        <TextView
            android:id="@+id/appointmentStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmed"
            android:textSize="12sp"
            android:fontFamily="@font/inter_semibold"
            android:textColor="#1A73E8"
            android:layout_marginTop="6dp"/>

    </LinearLayout>

</LinearLayout>
