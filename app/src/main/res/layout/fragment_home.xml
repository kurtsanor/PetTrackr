<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#eff0f4">
        <!--Dashboard Header-->
        <TextView
            android:id="@+id/greetings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:text="Dashboard"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <!--Pet Health Section Container-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardMaxElevation="3dp"
            app:cardPreventCornerOverlap="true"
            android:layout_marginHorizontal="3dp"
            >
            <!--Pet Health Header-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overall Pet Health"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginVertical="10dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/black"/>
            <!--Pie Chart-->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/donutChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="10dp"/>
        </androidx.cardview.widget.CardView>

        <!--Acitivty Trends Container-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="15dp"
            app:cardElevation="2dp"
            app:cardMaxElevation="3dp"
            app:cardPreventCornerOverlap="true"
            android:layout_marginHorizontal="3dp"
            >
            <!--Activity Trends Header-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activity Trends"
                android:textStyle="bold"
                android:layout_marginVertical="10dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"/>
            <!--Line Chart-->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                />
        </androidx.cardview.widget.CardView>

        <!--Appointment Container-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="20dp"
            app:cardElevation="2dp"
            app:cardMaxElevation="3dp"
            app:cardPreventCornerOverlap="true"
            android:layout_marginHorizontal="3dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--Appointment Header-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upcoming Appointments"
                    android:layout_marginVertical="10dp"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <!--Appointment Schedule Item-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"

                    app:contentPadding="10dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginHorizontal="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            android:layout_marginRight="8dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/checkup"
                                android:background="#FF9E80"
                                />
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Vet Checkup"
                                android:textSize="14sp"
                                android:textColor="@color/black"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="You have upcoming checkup"
                                android:textSize="11sp"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mar 03, 2025"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:gravity="end" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--Appointment Schedule Item-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"

                    app:contentPadding="10dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginHorizontal="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            android:layout_marginRight="8dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/checkup"
                                android:background="#8C9EFF"
                                />
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Annual Checkup for Max"
                                android:textSize="14sp"
                                android:textColor="@color/black"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Max needs checkup"
                                android:textSize="11sp"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mar 03, 2025"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:gravity="end" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>



        </androidx.cardview.widget.CardView>





    </LinearLayout>
</FrameLayout>