<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#eff0f4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="15dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/back"
                android:layout_marginLeft="10dp"
                />

            <!--Vaccination Header-->
            <TextView
                android:id="@+id/greetings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/inter_bold"
                android:text="Growth"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <!-- Record Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            app:cardCornerRadius="20dp"
            app:contentPadding="15dp"
            android:layout_marginHorizontal="3dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"
                    android:text="New Growth Entry"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    />

                <!-- Age and Weight -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/editTextAge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Weight"
                        android:inputType="text"
                        android:textSize="14sp"
                        android:background="@drawable/edittext_bg"
                        android:padding="10dp" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/editTextWeight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Height"
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        android:background="@drawable/edittext_bg"
                        android:padding="10dp" />
                </LinearLayout>

                <!-- Notes -->
                <EditText
                    android:id="@+id/editTextNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Notes"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:textSize="14sp"
                    android:minHeight="70dp"
                    android:background="@drawable/edittext_bg"
                    android:padding="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Save Button -->
        <Button
            android:id="@+id/buttonSaveRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Record"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/inter_bold"
            android:backgroundTint="#08d46c"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="15dp"/>

        <!--Acitivty Trends Container-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="15dp"
            app:cardElevation="2dp"
            app:cardMaxElevation="3dp"
            app:cardPreventCornerOverlap="true"
            android:layout_marginHorizontal="3dp"
            >
            <!--Activity Trends Header-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight Progress"
                android:textStyle="bold"
                android:layout_marginVertical="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/inter_bold"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"/>
            <!--Line Chart-->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="20dp"
            app:cardElevation="2dp"
            app:cardMaxElevation="3dp"
            app:cardPreventCornerOverlap="true"
            android:layout_marginHorizontal="3dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--Appointment Header-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recent Entries"
                    android:layout_marginVertical="10dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/black"
                    />

                <!--Appointment Schedule Item-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewGrowth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>
