<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDFD"
    tools:context=".GrowthFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#FFFDFD">

        <!-- Header -->
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Growth"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track height, weight, and age over time"
            android:textColor="#616161"
            android:textSize="13sp"
            android:textAlignment="center"
            android:layout_marginBottom="15dp" />

        <!-- Record Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#F5F5F5"
            app:contentPadding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Recorded"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Oct 9, 2025"
                    android:textColor="#616161"
                    android:layout_marginBottom="10dp" />

                <!-- Age and Weight -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/editTextAge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Age"
                        android:text="8 months"
                        android:inputType="text"
                        android:background="@drawable/edittext_bg"
                        android:padding="10dp" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/editTextWeight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Weight"
                        android:text="12.4 kg"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edittext_bg"
                        android:padding="10dp" />
                </LinearLayout>

                <!-- Height -->
                <EditText
                    android:id="@+id/editTextHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Height"
                    android:text="38 cm"
                    android:inputType="numberDecimal"
                    android:background="@drawable/edittext_bg"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp" />

                <!-- BCS -->
                <EditText
                    android:id="@+id/editTextBCS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Body Condition Score (BCS)"
                    android:text="5 / 9"
                    android:inputType="text"
                    android:background="@drawable/edittext_bg"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp" />

                <!-- Notes -->
                <EditText
                    android:id="@+id/editTextNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Notes"
                    android:text="Active and playful, good appetite."
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:minHeight="70dp"
                    android:background="@drawable/edittext_bg"
                    android:padding="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Save Button -->
        <Button
            android:id="@+id/buttonSaveRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Record"
            android:layout_marginTop="15dp"
            android:backgroundTint="#08d46c"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <!-- Growth Overview Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#F5F5F5"
            app:contentPadding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Growth Overview"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Weight progress"
                    android:textColor="#616161"
                    android:textSize="13sp"
                    android:layout_marginBottom="10dp" />

                <!-- Chart section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/growth_chart"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_growth_chart"
                        android:background="@android:color/transparent" />


                    <!-- Month labels -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="12dp"
                            android:text="Jan"
                            android:textColor="#212121"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="12dp"
                            android:text="Feb"
                            android:textColor="#212121"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="12dp"
                            android:text="Mar"
                            android:textColor="#212121"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Apr"
                            android:textColor="#212121"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="12dp"
                            android:text="May"
                            android:textColor="#212121"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="12dp"
                            android:text="Jun"
                            android:textColor="#212121"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tip: Record regularly to track healthy growth."
            android:textAlignment="center"
            android:textColor="#9E9E9E"
            android:textSize="12sp"
            android:layout_marginTop="5dp" />
    </LinearLayout>
</ScrollView>
