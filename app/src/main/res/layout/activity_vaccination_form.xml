<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#E0E0E0"
            app:boxStrokeWidth="1.5dp"
            app:boxStrokeWidthFocused="1.5dp"
            app:boxBackgroundColor="@android:color/white"
            app:hintTextColor="@color/accent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etVaccineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vaccine Name (e.g. Anti-Rabies)"
                android:inputType="textCapWords"
                android:textSize="14sp"
                android:fontFamily="@font/inter_regular"
                android:background="@drawable/rounded_edit_text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#E0E0E0"
            app:boxStrokeWidth="1.5dp"
            app:boxStrokeWidthFocused="1.5dp"
            app:boxBackgroundColor="@android:color/white"
            app:hintTextColor="@color/accent"
            app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
            app:startIconTint="@color/accent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAdministeredDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:hint="Date Administered"
                android:textSize="14sp"
                android:fontFamily="@font/inter_regular"
                android:background="@drawable/rounded_edit_text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#E0E0E0"
            app:boxStrokeWidth="1.5dp"
            app:boxStrokeWidthFocused="1.5dp"
            app:boxBackgroundColor="@android:color/white"
            app:hintTextColor="@color/accent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etVaccineNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Notes / Remarks (Optional)"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="4"
                android:textSize="14sp"
                android:fontFamily="@font/inter_regular"
                android:background="@drawable/rounded_edit_text" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnSaveVaccination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_3d"
            app:backgroundTint="@null"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/inter_bold"
            android:text="Save Vaccination"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>