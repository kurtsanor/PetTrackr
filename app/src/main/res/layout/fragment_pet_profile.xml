<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PetProfileFragment"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pet Profile"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="30dp"
            android:textAlignment="center"
            android:textColor="#212121"
            />
        <!--Profile Card-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#08d46c">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/doggy"
                    android:layout_marginRight="10sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingVertical="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Barney"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="8 months, Male"
                        android:textSize="13sp"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Golden Retriever, Beige"
                        android:textSize="13sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Stuff"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:textColor="#212121"
            />

        <!--Buttons Grid-->
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            app:columnCount="2"
            >
            <Button
                android:id="@+id/buttonDocuments"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Surface"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#F5F5F5"
                android:text="Documents"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#616161"
                android:textColorLink="#100101"
                app:icon="@drawable/docs"
                app:iconGravity="top"
                app:iconPadding="0dp"
                app:iconSize="100dp"
                app:iconTint="@null"
                app:layout_columnWeight="1"
                app:strokeColor="#C3C3C3" />
            <Button
                android:id="@+id/buttonVaccination"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Surface"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#F5F5F5"
                android:text="Vaccinations"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#616161"
                android:textColorLink="#100101"
                app:icon="@drawable/injection"
                app:iconGravity="top"
                app:iconPadding="0dp"
                app:iconSize="100dp"
                app:iconTint="@null"
                app:layout_columnWeight="1"
                app:strokeColor="#C3C3C3" />
            <Button
                android:id="@+id/buttonGrowth"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Surface"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#F5F5F5"
                android:text="Growth"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#616161"
                android:textColorLink="#100101"
                app:icon="@drawable/graph"
                app:iconGravity="top"
                app:iconPadding="0dp"
                app:iconSize="100dp"
                app:iconTint="@null"
                app:layout_columnWeight="1"
                app:strokeColor="#C3C3C3" />
            <Button
                android:id="@+id/buttonMedicalHistory"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Surface"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#F5F5F5"
                android:text="Medical History"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#616161"
                android:textColorLink="#100101"
                app:icon="@drawable/history"
                app:iconGravity="top"
                app:iconPadding="0dp"
                app:iconSize="100dp"
                app:iconTint="@null"
                app:layout_columnWeight="1"
                app:strokeColor="#C3C3C3" />
        </androidx.gridlayout.widget.GridLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Activities"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:textColor="#212121"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="20dp"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginRight="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/syringe"
                        android:background="#FF9E80"
                        />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vaccine"
                        android:textSize="10sp"
                        android:textColor="#212121"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vaccinated anti-rabies"
                        android:textSize="14sp"
                        android:textColor="#616161"
                        />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="20dp"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginRight="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/checkup"
                        android:background="#FFD180"
                        />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Checkup"
                        android:textSize="10sp"
                        android:textColor="#212121"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Checkup at the clinic"
                        android:textSize="14sp"
                        android:textColor="#616161"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>