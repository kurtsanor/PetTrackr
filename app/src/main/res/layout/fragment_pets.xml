<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PetsFragment"
    android:layout_marginBottom="15dp">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Add Pet"
        app:srcCompat="@drawable/add"
        app:tint="@null"
        android:backgroundTint="#08d46c"
        app:shapeAppearanceOverlay="@style/CircleFAB"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eff0f4"
        android:orientation="vertical"
        android:padding="10dp">

        <!--Pets Header-->

        <!--Recycler View-->
        <TextView
            android:id="@+id/greetings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/inter_bold"
            android:text="My Pets"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/petRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Pet Card Item-->

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>
</FrameLayout>