<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetsFragment"
    android:layout_marginBottom="15dp">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Add Pet"
        app:srcCompat="@drawable/add"
        app:tint="@null"
        android:backgroundTint="#08d46c"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eff0f4"
        android:orientation="vertical"
        android:padding="10dp">

        <!--Pets Header-->
        <TextView
            android:id="@+id/greetings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:text="My Pets"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:columnCount="1"
                >
                <!--Pet Card Item-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="15dp"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="3dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginHorizontal="3dp"
                    app:contentPadding="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!--Pet Picture-->
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:src="@drawable/doggy"/>
                        <!--Right Section Outer Layout-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <!--Right Section Inner Layout-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="5"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <!--Pet Name-->
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Buddy"
                                        android:textStyle="bold"
                                        android:textSize="20sp"
                                        android:fontFamily="sans-serif-condensed-light"
                                        android:textColor="@color/black"/>
                                    <!--Pet Breed-->
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Golden Retriever"
                                        android:textSize="15sp"
                                        android:fontFamily="sans-serif-condensed-light"
                                        android:textColor="#3E3E3E"/>
                                </LinearLayout>
                                <Button
                                    style="@style/ShapeAppearanceOverlay.Material3.Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:backgroundTint="#B9F6CA"
                                    android:text="Healthy ✓"
                                    android:textSize="12dp"
                                    android:textColor="#2E9E54"
                                    />
                            </LinearLayout>
                            <!--Line Break-->
                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:dividerColor="#EEEEEE"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"/>
                            <!--Statistics-->
                            <GridLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:columnCount="5"
                                android:useDefaultMargins="true"
                                android:alignmentMode="alignMargins">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/checkup"
                                    app:tint="#289045" />
                                <!--Pet Health Percentage-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="75% Health"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-condensed-light"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/bandage"
                                    app:tint="#8C9EFF"/>
                                <!--Pet Activity Count-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="82 Activities"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-condensed-light"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>
                            </GridLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--Pet Card Item-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginBottom="15dp"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="3dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginHorizontal="3dp"
                    app:contentPadding="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!--Pet Picture-->
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:src="@drawable/dog2"/>
                        <!--Right Section Outer Layout-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <!--Right Section Inner Layout-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="5"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <!--Pet Name-->
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Max"
                                        android:textStyle="bold"
                                        android:textSize="20sp"
                                        android:fontFamily="sans-serif-condensed-light"
                                        android:textColor="@color/black"/>
                                    <!--Pet Breed-->
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Golden Retriever"
                                        android:textSize="15sp"
                                        android:fontFamily="sans-serif-condensed-light"
                                        android:textColor="#3E3E3E"/>
                                </LinearLayout>
                                <Button
                                    style="@style/ShapeAppearanceOverlay.Material3.Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:backgroundTint="#FFD180"
                                    android:text="Minor Issue ✓"
                                    android:textColor="#87642D"
                                    android:textSize="12dp"
                                    />
                            </LinearLayout>
                            <!--Line Break-->
                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:dividerColor="#EEEEEE"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"/>
                            <!--Statistics-->
                            <GridLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:columnCount="5"
                                android:useDefaultMargins="true"
                                android:alignmentMode="alignMargins">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/checkup"
                                    app:tint="#289045"/>
                                <!--Pet Health Percentage-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="75% Health"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-condensed-light"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/bandage"
                                    app:tint="#8C9EFF"/>
                                <!--Pet Activity Count-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="82 Activities"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-condensed-light"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>
                            </GridLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--Pet Card Item-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginBottom="15dp"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="3dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginHorizontal="3dp"
                    app:contentPadding="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!--Pet Picture-->
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:src="@drawable/cat"/>
                        <!--Right Section Outer Layout-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <!--Right Section Inner Layout-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="5"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <!--Pet Name-->
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Asteroid"
                                        android:textStyle="bold"
                                        android:textSize="20sp"
                                        android:fontFamily="sans-serif-condensed-light"
                                        android:textColor="@color/black"/>
                                    <!--Pet Breed-->
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Cat"
                                        android:textSize="15sp"
                                        android:fontFamily="sans-serif-condensed-light"
                                        android:textColor="#3E3E3E"/>
                                </LinearLayout>
                                <Button
                                    style="@style/ShapeAppearanceOverlay.Material3.Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:backgroundTint="#FFD180"
                                    android:text="Minor Issue ✓"
                                    android:textColor="#87642D"
                                    android:textSize="12dp"
                                    />
                            </LinearLayout>
                            <!--Line Break-->
                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:dividerColor="#EEEEEE"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"/>
                            <!--Statistics-->
                            <GridLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:columnCount="5"
                                android:useDefaultMargins="true"
                                android:alignmentMode="alignMargins">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/checkup"
                                    app:tint="#289045"/>
                                <!--Pet Health Percentage-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="75% Health"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-condensed-light"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/bandage"
                                    app:tint="#8C9EFF"/>
                                <!--Pet Activity Count-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="82 Activities"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-condensed-light"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>
                            </GridLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>







            </androidx.gridlayout.widget.GridLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            tools:src="@tools:sample/avatars" />

    </LinearLayout>
</FrameLayout>